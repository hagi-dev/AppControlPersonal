<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="20dp"
        android:background="@color/backgroundMenu"
        android:layout_gravity="bottom"
        android:id="@+id/menu"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="25dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                />
            <TextView
                android:id="@+id/txtHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/unableIcons"
                android:textSize="13dp"
                android:text="Home"
                android:fontFamily="@font/mulish_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnContrato"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgContrato"
                android:layout_width="25dp"
                android:layout_weight="1"
                android:pointerIcon="arrow"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/contrato"/>
            <TextView
                android:id="@+id/txtContrato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/unableIcons"
                android:textSize="13dp"
                android:text="contrato"
                android:fontFamily="@font/mulish_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnPersonal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPersonal"
                android:layout_width="25dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/personal"/>
            <TextView
                android:id="@+id/txtPersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/unableIcons"
                android:textSize="13dp"
                android:text="personal"
                android:fontFamily="@font/mulish_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnAsistencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAsistencia"
                android:layout_width="25dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/asistencias"/>
            <TextView
                android:id="@+id/txtAsistencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/unableIcons"
                android:textSize="13dp"
                android:text="asistencia"
                android:fontFamily="@font/mulish_regular"/>
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>