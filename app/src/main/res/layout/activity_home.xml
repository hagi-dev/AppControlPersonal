
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <!-- start of header-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/header"
        android:paddingHorizontal="20dp">
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/mulishbold"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            app:layout_goneMarginTop="20dp"
            android:text="Home"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <ImageView
            android:layout_width="44dp"
            android:layout_marginTop="14dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logo"
            app:layout_constraintRight_toRightOf="parent"></ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- end of header-->
    <!-- start of body-->
    <!-- start contrato-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp">
        <!-- start of acciones static-->
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="@color/backgroundMenu"
            android:orientation="vertical"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_regular"
                android:text="Lista"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:fontFamily="@font/mulish_regular"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_weight="1"
                    android:text="@string/text_subrayado"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/button1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/ic_baseline_filter_alt_24"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/ic_baseline_delete_outline_24"
                        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/ic_baseline_history_24"
                        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/ic_baseline_add_circle_outline_24"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/ic_baseline_arrow_circle_down_24"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- end of acciones static-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ftlContrato"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- start of filtering static-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lstContrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ftlContrato">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rclPersona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- end of list static-->

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- end contrato-->
    <!-- end of body-->
    <!-- start of menu-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="20dp"
        android:background="@color/backgroundMenu"
        android:layout_gravity="bottom"
        android:id="@+id/menu">

        <LinearLayout
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="25dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                />
            <TextView
                android:id="@+id/txtHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/unableIcons"
                android:textSize="13dp"
                android:text="Home"
                android:fontFamily="@font/mulish_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnContrato"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgContrato"
                android:layout_width="25dp"
                android:layout_weight="1"
                android:pointerIcon="arrow"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/contrato"/>
            <TextView
                android:id="@+id/txtContrato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/unableIcons"
                android:textSize="13dp"
                android:text="contrato"
                android:fontFamily="@font/mulish_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnPersonal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPersonal"
                android:layout_width="25dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/personal"/>
            <TextView
                android:id="@+id/txtPersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/unableIcons"
                android:textSize="13dp"
                android:text="personal"
                android:fontFamily="@font/mulish_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnAsistencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAsistencia"
                android:layout_width="25dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/asistencias"/>
            <TextView
                android:id="@+id/txtAsistencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/unableIcons"
                android:textSize="13dp"
                android:text="asistencia"
                android:fontFamily="@font/mulish_regular"/>
        </LinearLayout>



    </LinearLayout>

    <!-- end of menu-->

</FrameLayout>